{
    "compilerOptions": {
        "sourceMap": false,
        "target": "es2024",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "removeComments": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "types": [
            "node",
            "@wdio/globals/types",
            "@wdio/mocha-framework",
            "@wdio/visual-service"
        ]       
    },
    "include": ["./**/*.ts", "scripts"],
    "exclude": ["node_modules", "dist"]
}